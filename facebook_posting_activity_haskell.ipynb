    "heatMapAxis' :: Axis Cairo V2 Double\n",
    "heatMapAxis' = r2Axis &~ do\n",
    "  display colourBar\n",
    "  axisExtend Control.Lens..= noExtend\n",
    "  axisColourMap Control.Lens..= greys\n",
    "  let result = [[1..3], [3..1],[1..3]]\n",
    "  heatMap' result\n",
    "\n",
    "heatMapExample' = renderAxis heatMapAxis'\n",
    "diagram heatMapExample'"
