   "source": [
    "import Data.Time.Calendar.WeekDate\n",
    "import Data.Time.Format\n",
    "\n",
    "-- print week numbers of each\n",
    "print [ formatTime defaultTimeLocale \"%U\" x | x <- m]\n",
    "\n",
    "-- print the day of the week\n",
    "print [ formatTime defaultTimeLocale \"%a\" x | x <- m]\n"
